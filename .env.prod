APP_NAME="Koumbaya Marketplace"
APP_ENV=production
APP_KEY=base64:CHANGE_THIS_KEY_ON_HOSTINGER
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://koumbaya.com

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Production Cache Settings
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-domain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_MINUTES=1

# JWT Configuration
JWT_SECRET=CHANGE_THIS_JWT_SECRET_ON_HOSTINGER
JWT_TTL=60

# E-Billing Configuration
EBILLING_USERNAME=your_ebilling_username
EBILLING_SHARED_KEY=your_ebilling_shared_key
EBILLING_SERVER_URL=https://lab.billing-easy.net/api/v1/merchant/e_bills
EBILLING_URL=https://lab.billing-easy.net/api/v1/
EBILLING_TRANSFER_USERNAME=your_transfer_username
EBILLING_TRANSFER_SHARED_KEY=your_transfer_shared_key

# Mobile Money Configuration
AIRTEL_MONEY_ENABLED=true
MOOV_MONEY_ENABLED=true
GT_MONEY_ENABLED=true

# Payment Fees
LOTTERY_TICKET_FEES=0
PRODUCT_PURCHASE_FEES=0
EBILLING_PERCENTAGE_FEE=2

VITE_APP_URL="${APP_URL}"
VITE_API_URL="${APP_URL}/api"